{
  "name": "copy-code",
  "displayName": "Copy Code",
  "description": "A VSCode plugin for saving, organizing and reusing code snippets.",
  "author": "StarCode000",
  "publisher": "StarCode000",
  "logo": "./logo.png",
  "private": "true",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Snippets"
  ],
  "activationEvents": [
    "onView:copyCodeExplorer"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "copy-code-container",
          "title": "Copy Code",
          "icon": "src/assets/img/view-icon.svg"
        }
      ]
    },
    "views": {
      "copy-code-container": [
        {
          "id": "copyCodeExplorer",
          "name": "代码库",
          "type": "tree"
        }
      ]
    },
    "commands": [
      {
        "command": "copy-code.saveToLibrary",
        "title": "保存至代码库",
        "category": "Copy Code"
      },
      {
        "command": "copy-code.rename",
        "title": "重命名",
        "category": "Copy Code"
      },
      {
        "command": "copy-code.createDirectory",
        "title": "新建目录",
        "category": "Copy Code",
        "icon": "$(add)"
      },
      {
        "command": "copy-code.appendCode",
        "title": "粘贴代码",
        "category": "Copy Code"
      },
      {
        "command": "copy-code.editSnippet",
        "title": "编辑代码",
        "category": "Copy Code"
      },
      {
        "command": "copy-code.delete",
        "title": "删除",
        "category": "Copy Code"
      },
      {
        "command": "copy-code.moveToDirectory",
        "title": "移动到目录",
        "category": "Copy Code"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "copy-code.rename",
          "when": "view == copyCodeExplorer",
          "group": "1_modification"
        },
        {
          "command": "copy-code.appendCode",
          "when": "view == copyCodeExplorer && viewItem == snippet",
          "group": "2_operation"
        },
        {
          "command": "copy-code.editSnippet",
          "when": "view == copyCodeExplorer && viewItem == snippet",
          "group": "2_operation"
        },
        {
          "command": "copy-code.moveToDirectory",
          "when": "view == copyCodeExplorer && viewItem == snippet",
          "group": "3_organization"
        },
        {
          "command": "copy-code.delete",
          "when": "view == copyCodeExplorer",
          "group": "9_deletion"
        }
      ],
      "view/title": [
        {
          "command": "copy-code.createDirectory",
          "when": "view == copyCodeExplorer",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "copy-code.saveToLibrary",
          "when": "editorHasSelection",
          "group": "9_cutcopypaste"
        }
      ]
    },
    "capabilities": {
      "untrustedWorkspaces": {
        "supported": true
      },
      "virtualWorkspaces": true
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "uuid": "^11.1.0"
  }
}